class Node {
    public:
        int data;
        Node *left;
        Node *right;
        Node(int d) {
            data = d;
            left = NULL;
            right = NULL;
        }
};

*/

    Node * insert(Node * root, int data) 
    {

        if(!root)
        {
            root = new Node(data);
            root->left = nullptr;
            root->left = nullptr;
        }
       else if(root->data<data)
       {//go left
            root->right = insert(root->right,data);
       }
       else if(root->data>data)
       {//go right
            root->left = insert(root->left,data);
       }
        return root;
    }
